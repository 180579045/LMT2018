      xmlns:local="clr-namespace:SCMTMainWindow"
      mc:Ignorable="d" 
      d:DesignHeight="1000" d:DesignWidth="1200"
      Title="UEList2">
    
    <Grid>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="300" MaxWidth="500"/>
            <!--左侧消息列表与基本信息-->
            <ColumnDefinition Width="900" />
            <!--右侧UE列表与图表-->
        </Grid.ColumnDefinitions>

        <!--左侧消息列表与基本信息-->
        <Grid Grid.Column="0">

            <Grid.RowDefinitions>
                <RowDefinition Height="500" MaxHeight="500" MinHeight="400" />
                <!--消息列表-->
                <RowDefinition Height="3"/>
                <RowDefinition />
                <!--小区基本信息-->
            </Grid.RowDefinitions>

            <!--消息列表-->
            <ListView Grid.Row="0" Name="UEMessageGrid">

                <ListView.View>
                    <GridView>
                        <GridViewColumn Header="接收时间" Width="120" DisplayMemberBinding="{Binding MsgTime}" />
                        <GridViewColumn Header="消息内容" Width="200">
                            <GridViewColumn.CellTemplate>
                                <DataTemplate>
                                    <TextBlock  Text="{Binding MsgContent}" Foreground="Blue" Cursor="Hand" />
                                </DataTemplate>
                            </GridViewColumn.CellTemplate>
                        </GridViewColumn>
                    </GridView>
                </ListView.View>

            </ListView>

            <GridSplitter Grid.Row="1"  HorizontalAlignment="Stretch"/>

            <!--小区基本信息
		<DataGrid Name="CallInfo" Grid.Row="2" Height="500">
			<DataGrid.Columns>
				<DataGridTextColumn Header="激活状态"/>
				<DataGridTextColumn Header="小区制式"/>
				<DataGridTextColumn Header="E-UTRA工作频段"/>
			</DataGrid.Columns>
		</DataGrid>
		-->

            <ListView Grid.Row="2" Name="CellBaseInfo">

                <ListView.View>
                    <GridView>
                        <GridViewColumn Header="内容" Width="120" DisplayMemberBinding="{Binding Title}" />
                        <GridViewColumn Header="值" Width="150">
                            <GridViewColumn.CellTemplate>
                                <DataTemplate>
                                    <TextBlock  Text="{Binding Content}" TextDecorations="Underline" Foreground="Blue" Cursor="Hand" />
                                </DataTemplate>
                            </GridViewColumn.CellTemplate>
                        </GridViewColumn>
                    </GridView>
                </ListView.View>

            </ListView>


        </Grid>

        <GridSplitter Grid.Column="1" />

        <!--右侧UE列表与图表-->
        <Grid Grid.Column="2">

            <Grid.RowDefinitions>
                <RowDefinition Height="150" MaxHeight="150"/>
                <!--UE列表-->
                <RowDefinition Height="3"/>
                <!--分隔符-->
                <RowDefinition />
                <!--各种图形和UE信息表格-->
            </Grid.RowDefinitions>

            <!--UE列表-->
            <DataGrid Name="UEListGrid" Height="150" Grid.Row="0" ItemsSource="{Binding}" AutoGenerateColumns="False" VerticalAlignment="Top" >

                <DataGrid.Columns>
                    <DataGridTextColumn Header="First Name"  Binding="{Binding FirstName}"/>
                    <DataGridTextColumn Header="Last Name" Binding="{Binding LastName}" />
                    <DataGridHyperlinkColumn Header="Email" Binding="{Binding Email}" />
                    <DataGridCheckBoxColumn Header="Member?" Binding="{Binding IsMember}" />
