<Window x:Class="SCMTMainWindow.Component.SCMTControl.FileManager.FileRename"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SCMTMainWindow.Component.SCMTControl.FileManager"
        mc:Ignorable="d"
        Title="FileRename" Height="150" Width="300">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>

        <Label Width="80" Height="30" Margin="10,10,202,0">新文件名：</Label>
        <TextBox Grid.Row="1" Width="280" Height="30" Name="tbNewName"></TextBox>

        <Button Grid.Row="2" Width="80" Height="30" Name="btnOK" Click="btnOK_Click"  Margin="30,2,170,3" >确认</Button>
        <Button Grid.Row="2" Width="80" Height="30" Name="btnCancel" Click="btnCancel_Click" Margin="170,2,30,3">取消</Button>

    </Grid>
</Window>
