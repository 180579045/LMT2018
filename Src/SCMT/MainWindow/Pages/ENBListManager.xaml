<!--
    添加与管理基站列表
  -->
    
<UserControl x:Class="SCMTMainWindow.Pages.ENBListManager"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SCMTMainWindow.Pages"
             xmlns:vm="clr-namespace:SCMTMainWindow.ViewModel"
             xmlns:suc="clr-namespace:SCMTMainWindow.Component.SCMTControl"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800"
             DataContext="{Binding Source={StaticResource Locator}, Path=NodeBListManager}">

    <UserControl.Resources>
    </UserControl.Resources>

    <Grid>
        
        <!-- 一行总共能够容纳7个基站节点 -->
        <ScrollViewer Width="780" Height="400">
            <WrapPanel>
                <suc:AddNodeB_ICON></suc:AddNodeB_ICON>
                <suc:NodeB_ICON x:Name="NodeBIcon" ConnectNodeBCommand="{Binding ConnectNodeBCommand}"></suc:NodeB_ICON>
            </WrapPanel>
        </ScrollViewer>

    </Grid>
    
</UserControl>
