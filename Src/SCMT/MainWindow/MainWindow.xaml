<Metro:MetroWindow x:Class="SCMTMainWindow.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SCMTMainWindow"
        xmlns:Metro="clr-namespace:UICore.Controls.Metro;assembly=UICore"
        xmlns:cefSharp="clr-namespace:CefSharp.Wpf;assembly=CefSharp.Wpf"
        xmlns:xcad="http://schemas.xceed.com/wpf/xaml/avalondock"
        mc:Ignorable="d"
        Title="{Binding Title}" d:DesignWidth="1600" d:DesignHeight="1200" BorderThickness="1" WindowStyle="None" Closed="MetroWindow_Closed" SizeChanged="OnSizeChanged">

    <Metro:MetroWindow.DataContext>
        <local:MainWindowVM/>
    </Metro:MetroWindow.DataContext>

    <Metro:MetroWindow.Menu>
        <Metro:MetroTitleMenu>

            <Metro:MetroTitleMenuItem Header="Ver0.1">
            </Metro:MetroTitleMenuItem>

            <Metro:MetroTitleMenuItem Header="基站列表" Icon="Resources/NodeB_List.png">
                <Metro:MetroMenuItem Header="添加基站" Click="AddNodeB_Click" />
            </Metro:MetroTitleMenuItem>

            <Metro:MetroTitleMenuItem Header="">
                <Metro:MetroMenuItem Header="工具箱" Icon="Resources/titleMuenIcon.png" />
                <Metro:MetroMenuItem Header="设置" Icon="Resources/titleMuenIcon.png" />
                <Metro:MetroMenuItem Header="帮助" Icon="Resources/titleMuenIcon.png">
                    <Metro:MetroMenuItem Header="关于我们" Icon="Resources/titleMuenIcon.png"/>
                    <Metro:MetroMenuItem Header="使用帮助" Icon="Resources/titleMuenIcon.png"/>
                    <Metro:MetroMenuItem Header="反馈问题" Icon="Resources/titleMuenIcon.png"/>
                </Metro:MetroMenuItem>
            </Metro:MetroTitleMenuItem>

        </Metro:MetroTitleMenu>
    </Metro:MetroWindow.Menu>

    <Grid>

        <Metro:MetroMenuHorTabControl IconMode="True" x:Name="MainHorizenTab">
            
            <Metro:MetroMenuTabItem Header="基本信息" Icon="Resources/BaseInfo.png" IconMove="Resources/BaseInfoB.png" LostFocus="Lost_Nodeb_Focus" Loaded="Load_Nodeb" GotFocus="Get_Nodeb_Focus">

                <Grid x:Name="AllContent">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="250" MaxWidth="250" />
                        <ColumnDefinition Width="5" />
                        <ColumnDefinition Width="200"/>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>

                    <!--对象树模型(对象树节点只到父节点级别)-->
                    <Metro:MetroScrollViewer Grid.Column="0">
                        <Border BorderBrush="#19000000" BorderThickness="0,0,1,0" Margin="0,40,0,0">
                            <StackPanel x:Name="lists">

                                <Metro:MetroExpander Header="基本信息" Icon="Resources/BaseInfo2.png" />
                                <Metro:MetroExpander Header="一单开站" Icon="Resources/EasyNB.png"/>
                                <Metro:MetroExpander Header="消息模板" Icon="Resources/NetPLanB.png" />
                                <Metro:MetroExpander Header="图表模板" >
                                    <StackPanel>
                                        <Metro:MetroExpander Header="数据表" />
                                        <Metro:MetroExpander Header="折线图" Click="Show_LineChart" />
                                        <Metro:MetroExpander Header="流程图" />
                                    </StackPanel>
                                </Metro:MetroExpander>
                                <Metro:MetroExpander x:Name="Obj_Collect" Header="收藏节点" Click="Collect_Node_Click" />
                                <Metro:MetroExpander x:Name="Obj_Root" Header="基站节点列表" >
                                    <Metro:MetroExpander.ContextMenu>
                                        <Metro:MetroContextMenu>
                                            <Metro:MetroMenuItem Header="添加到收藏" Click="AddToCollect_Click"  />
                                        </Metro:MetroContextMenu>
                                    </Metro:MetroExpander.ContextMenu>
                                </Metro:MetroExpander>
                                
                            </StackPanel>
                        </Border>
                    </Metro:MetroScrollViewer>

                    <!--拖动分割线-->
                    <GridSplitter Grid.Column="1" Width="5" HorizontalAlignment="Stretch" >
                        <GridSplitter.Background>
                            <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                                <GradientStop Color="#FFE8E8E8" Offset="0"/>
                                <GradientStop Color="#FFE6E6E6" Offset="1"/>
                                <GradientStop Color="#FFBFBFBF" Offset="0.478"/>
                            </LinearGradientBrush>
                        </GridSplitter.Background>
                    </GridSplitter>

                    <!--第二级对象树模型-->
                    <Metro:MetroFavScrollViewer x:Name="Fav" Grid.Column="2" Margin="0,40,0,0">
                        <Border BorderBrush="#19000000" BorderThickness="0,0,1,0" >
                            <StackPanel>
                                <Metro:MetroTextBox Width="200" x:Name="check2" Text="搜索内容" Title="" InputHint="InputHint..." Grid.Column="1"
                                                    ButtonTitle="搜索" PopupHint="Enter you want" Icon="Resources/editIcon.png" />
                                <StackPanel x:Name="FavLeaf_Lists"></StackPanel>
                            </StackPanel>
                        </Border>
                    </Metro:MetroFavScrollViewer>

                    <xcad:DockingManager Grid.Column="3" AllowMixedOrientation="True"  Margin="0,40,0,0">
                        <xcad:LayoutRoot x:Name="_layoutRoot">
                            <xcad:LayoutPanel Orientation="Horizontal">
                                <xcad:LayoutAnchorablePane>
                                    <xcad:LayoutAnchorable ContentId="properties" Title="Properties" CanHide="False" CanClose="False">
                                        <cefSharp:ChromiumWebBrowser Address="E:\Workspace\DatangMobile\Tools_LMT\LMT2018\Src\SCMT\UI\Chart\LineChart_JS\LinChart.html" />
                                    </xcad:LayoutAnchorable>
                                </xcad:LayoutAnchorablePane>
                            </xcad:LayoutPanel>
                        </xcad:LayoutRoot>
                    </xcad:DockingManager>

                </Grid>
                
            </Metro:MetroMenuTabItem>

            <Metro:MetroMenuTabItem Header="小区规划" Icon="Resources/NetPlan.png" IconMove="Resources/NetPlanB.png">
                <!--此处需要通过Page的方式进行加载，即点击的时候，再执行实例化-->
            </Metro:MetroMenuTabItem>

            <Metro:MetroMenuTabItem Header="基站数据" Icon="Resources/Wave.png" IconMove="Resources/WaveB.png">
                <Grid Margin="0,40,0,0">
                    <cefSharp:ChromiumWebBrowser Address="E:\Workspace\DatangMobile\Tools_LMT\LMT2018\Src\SCMT\UI\Chart\LineChart_JS\LinChart.html" />
                </Grid>
            </Metro:MetroMenuTabItem>

            <Metro:MetroMenuTabItem Header="告警管理" Icon="Resources/Alarm.png" IconMove="Resources/AlarmB.png">
                <Grid>
                    
                </Grid>
            </Metro:MetroMenuTabItem>

            <Metro:MetroMenuTabItem Header="日志管理" Icon="Resources/Log.png" IconMove="Resources/LogB.png">
                <Grid>
                </Grid>
            </Metro:MetroMenuTabItem>

            <Metro:MetroMenuTabItem Header="文件管理" Icon="Resources/File.png" IconMove="Resources/FileB.png">
                <Grid>
                </Grid>
            </Metro:MetroMenuTabItem>



            <Metro:MetroMenuTabItem Header="工具箱" Icon="Resources/BaseInfo.png" IconMove="Resources/BaseInfoB.png">
                <Grid Margin="0,40,0,0">
                    
                    <Metro:MetroMenuTabControl x:Name="Tooltab" IconMode="False">

                        <Metro:MetroMenuTabItem Header="基站" Height="40" VerticalAlignment="Top">
                            <Grid>
                                <Metro:MetroScrollViewer>
                                    <Metro:MetroWaterfallFlow x:Name="waterfallFlow2" ListWidth="300">
                                        <Grid>
                                            <Metro:MetroGroupBox Header="工具一">
                                                <Grid>
                                                    <StackPanel>
                                                        <Metro:MetroTextBlock Text="工具说明" Opacity="0.65" />
                                                        <Metro:MetroImage Source="Resources/ToolBox.png" Margin="0,5,0,0" Cursor="Hand" />
                                                    </StackPanel>
                                                </Grid>
                                            </Metro:MetroGroupBox>
                                        </Grid>

                                        <Grid>
                                            <Metro:MetroGroupBox Header="工具二">
                                                <Grid>
                                                    <StackPanel>
                                                        <Metro:MetroTextBlock Text="工具说明" Opacity="0.65" />
                                                        <Metro:MetroImage Source="Resources/ToolBox.png" Margin="0,5,0,0" Cursor="Hand" />
                                                    </StackPanel>
                                                </Grid>
                                            </Metro:MetroGroupBox>
                                        </Grid>

                                        <Grid>
                                            <Metro:MetroGroupBox Header="工具三">
                                                <Grid>
                                                    <StackPanel>
                                                        <Metro:MetroTextBlock Text="工具说明" Opacity="0.65" />
                                                        <Metro:MetroImage Source="Resources/ToolBox.png" Margin="0,5,0,0" Cursor="Hand" />
                                                    </StackPanel>
                                                </Grid>
                                            </Metro:MetroGroupBox>
                                        </Grid>
                                    </Metro:MetroWaterfallFlow>
                                </Metro:MetroScrollViewer>

                            </Grid>
                        </Metro:MetroMenuTabItem>

                        <Metro:MetroMenuTabItem Header="通用"  Height="40" VerticalAlignment="Top">
                            <Grid>

                            </Grid>
                        </Metro:MetroMenuTabItem>

                        <Metro:MetroMenuTabItem Header="日志解析"  Height="40" VerticalAlignment="Top">

                            <Grid>

                                <Grid>
                                    <Metro:MetroScrollViewer>
                                        <Metro:MetroWaterfallFlow x:Name="waterfallFlow4" ListWidth="300">
                                            <Grid>
                                                <Metro:MetroGroupBox Header="告警日志解析">
                                                    <Grid>
                                                        <StackPanel>
                                                            <Metro:MetroTextBlock Text="可解析基站活跃告警日志、基站历史告警日志、基站异常日志" />
                                                            <Metro:MetroImage Source="Resources/ToolBox.png" Margin="0,5,0,0" Cursor="Hand" />
                                                        </StackPanel>
                                                    </Grid>
                                                </Metro:MetroGroupBox>
                                            </Grid>

                                            <Grid>
                                                <Metro:MetroGroupBox Header="工具二">
                                                    <Grid>
                                                        <StackPanel>
                                                            <Metro:MetroTextBlock Text="工具说明" Opacity="0.65" />
                                                            <Metro:MetroImage Source="Resources/ToolBox.png" Margin="0,5,0,0" Cursor="Hand" />
                                                        </StackPanel>
                                                    </Grid>
                                                </Metro:MetroGroupBox>
                                            </Grid>

                                            <Grid>
                                                <Metro:MetroGroupBox Header="工具三">
                                                    <Grid>
                                                        <StackPanel>
                                                            <Metro:MetroTextBlock Text="工具说明" Opacity="0.65" />
                                                            <Metro:MetroImage Source="Resources/ToolBox.png" Margin="0,5,0,0" Cursor="Hand" />
                                                        </StackPanel>
                                                    </Grid>
                                                </Metro:MetroGroupBox>
                                            </Grid>
                                        </Metro:MetroWaterfallFlow>
                                    </Metro:MetroScrollViewer>

                                </Grid>

                            </Grid>

                        </Metro:MetroMenuTabItem>

                        <Metro:MetroMenuTabItem Header="性能解析" Height="40" VerticalAlignment="Top">
                            <Grid>

                            </Grid>
                        </Metro:MetroMenuTabItem>


                    </Metro:MetroMenuTabControl>

                </Grid>
            </Metro:MetroMenuTabItem>

        </Metro:MetroMenuHorTabControl>



    </Grid>

</Metro:MetroWindow>
