<Window x:Class="SCMTMainWindow.View.ChooseRRUType"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SCMTMainWindow.View"
             mc:Ignorable="d" 
             Height="300" Width="300" WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>

        <Label Grid.Row="1" VerticalAlignment="Center" Width="80" Margin="30,0,180,0">RRU类型</Label>

        <ComboBox Name="cbRRUtype" Width="100" Height="30" Grid.Row="1" VerticalAlignment="Center" Margin="80,0,80,0" VerticalContentAlignment="Center"></ComboBox>


        <Button Name="btnOK" Click="btnOK_Click" Width="70" Height="30" Grid.Row="3" Margin="50,0,150,0">确定</Button>
        <Button Name="btnCancle" Click="btnCancle_Click" Width="70" Height="30" Margin="150,0,50,0" Grid.Row="3">取消</Button>

    </Grid>
</Window>